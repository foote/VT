@model WebApplication2.ViewModels.VehicleColors

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vehicle.ColorName" class="control-label"></label>
                <select asp-for="Colors" class="form-control" asp-items="@(new SelectList(Model.Colors, "Id", "Description"))"></select>
                <span asp-validation-for="Vehicle.ColorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Vehicle.VIN" class="control-label"></label>
                <input asp-for="Vehicle.VIN" class="form-control" />
                <span asp-validation-for="Vehicle.VIN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Year" class="control-label"></label>
                <input asp-for="Vehicle.Year" class="form-control" />
                <span asp-validation-for="Vehicle.Year" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
